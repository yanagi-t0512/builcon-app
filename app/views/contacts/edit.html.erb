<div class="d-flex align-items-center">
  <h2>問合せ編集</h2>
  <div class="ml-auto contacts__linkBox">
    <%= link_to '問合せ一覧', contacts_path, class: 'btn btn-outline-info' %>
  </div>
</div>

<div class="d-flex mb-5">
  <div class="mr-5"><%= @contact.building.property_name %></div>
  <div class="mr-5"><%= @contact.building.room_number %></div>
</div>

<%= form_for @contact do |f| %>
  
  <div class="form-group">
    <%= f.label :contact, 'お問い合わせ' %>
    <%= f.text_field :contact, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :respond, '回答内容' %>
    <%= f.text_area :respond, class: 'form-control', rows: 4 %>
  </div>
  <div class="form-group">
    <%= f.label :status, '対応状況' %>
    <%= f.select :status, [["未対応", "未対応"], ["対応中", "対応中"], ["完了", "完了"]], class: 'form-control' %>
  </div>
  
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
